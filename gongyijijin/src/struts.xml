<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<!-- yangmengjie -->
	<package name="default" extends="struts-default">
		<interceptors>
			<interceptor name="empIntercepter" class="com.yangmengjie.interecptor.UserInterecptor">
				<param name="excludeMethods">login</param>
			</interceptor>
			<interceptor-stack name="emploginStack">
				<interceptor-ref name="defaultStack"></interceptor-ref>
				<interceptor-ref name="empIntercepter"></interceptor-ref>
			</interceptor-stack>
		</interceptors>
		<!-- 创建后台登录拦截器栈 -->
		<default-interceptor-ref name="emploginStack"></default-interceptor-ref>
		<!-- 全局配置error到error.jsp页面 -->
		<global-results>
			<result name="error1">/error.jsp</result>
		</global-results>
		<global-exception-mappings>
			<exception-mapping result="error1" exception="java.lang.Exception"></exception-mapping>
		</global-exception-mappings>
		<!-- 用户管理action -->
		<action name="emp_*" class="com.yangmengjie.action.EmpAction" method="{1}">
			<result name="success">/admin/login/home.jsp</result>
			<result name="entryBack_error">/entryBack.jsp</result>
			<result name="entryBack1" type="redirectAction">emp_login.action</result>
			<result name="addEmp">/admin/employee/changeEmployee.jsp</result>
			<result name="motifyEmPwd">/admin/employee/changePassword.jsp</result>
		</action>
		<!-- 角色管理action -->
		<action name="role_*" class="com.yangmengjie.action.EmpRoleAction" method="{1}">
			<result name="success">/admin/login/rbac.jsp</result>
			<result name="motifyRole1" type="redirect">/entryBack.jsp</result>
			<result name="motifyRole2" type="redirectAction">role_roleConfig.action</result>
			<result name="config">/admin/login/role.jsp</result>
			<result name="motifyRole3">/admin/login/function.jsp</result>
			<result name="addFun">/admin/employee/changeEmployee.jsp</result>
			<result name="deletFun">/admin/login/function.jsp</result>
			<result name="motifyEmPwd">/amin/employee/changePassword.jsp</result>
		</action>
	</package>
	
	<package name="city_province" extends="struts-default">
		<action name="get_*" class="com.yangmengjie.action.SelectCityAction" method="{1}"></action>
	</package>
	
	<!-- yuxiaofei -->
	<package name="yuxiaofei" extends="struts-default">
		<action name="MoneyApply_*" class="com.yuxiaofei.pro_apply.action.ProApplyAction" method="{1}">
			<result name="error">/error.jsp</result>
			<result name="right">/right.jsp</result>
			<interceptor-ref name="defaultStack"></interceptor-ref>
		</action>
	</package>
	
	<!-- jingbinbin -->
	<package name="jing" extends="struts-default">
	  <action name="register_*" class="com.jingbinbinzhu.zhuce.RegisterAction" method="{1}">
	      <result name="error">/error1.jsp</result>
	      <result name="success">/login.jsp</result>
	  </action>
	  
	  <action name="qian_*" class="com.jingbinbinzhu.deng.qianloginAction" method="{1}">
	     <result name="qianlogin">/home.jsp</result>
	     <result name="dengcuo">/login.jsp</result>
	  </action>

	<package name="second_check_money" extends="struts-default">
		<action name="secondMoney_*" class="com.yuxiaofei.pro_apply.action.SecondCheckAction" method="{1}">
			<result name="error">/error.jsp</result>
			<result name="right">/right.jsp</result>
		</action>
	</package>
	<package name="first_check_money" extends="struts-default">
		<action name="firstCheck_*" class="com.yuxiaofei.pro_apply.action.FirstCheckAction" method="{1}">
			<result name="error">/error.jsp</result>
			<result name="success">/right.jsp</result>
		</action>
	</package>
	
	<!-- shidongfang -->
	<package name="sdf" extends="struts-default" namespace="">
		<action name="user_*" class="com.shidongfang.action.DonTableAction" method="{1}">
			 <result name="list" >/pro_list.jsp</result>
			<!-- 重定向到某个Action -->
			<result name="to_select" type="redirectAction">user_select.action</result>
		</action>
	
	</package>
</struts>    
